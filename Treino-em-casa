  ombros: `<svg viewBox="0 0 64 64"><circle cx="32" cy="10" r="6"/><line x1="32" y1="16" x2="32" y2="50" stroke="#56ab2f" stroke-width="4"/><line x1="32" y1="20" x2="16" y2="36" stroke="#56ab2f" stroke-width="4"/><line x1="32" y1="20" x2="48" y2="36" stroke="#56ab2f" stroke-width="4"/></svg>`,
  costas: `<svg viewBox="0 0 64 64"><circle cx="32" cy="10" r="4"/><line x1="32" y1="14" x2="32" y2="50" stroke="#56ab2f" stroke-width="4"/><line x1="32" y1="24" x2="20" y2="44" stroke="#56ab2f" stroke-width="4"/><line x1="32" y1="24" x2="44" y2="44" stroke="#56ab2f" stroke-width="4"/></svg>`,
  abdomen: `<svg viewBox="0 0 64 64"><circle cx="32" cy="10" r="4"/><rect x="30" y="14" width="4" height="36"/><line x1="30" y1="20" x2="20" y2="40" stroke="#56ab2f" stroke-width="2"/><line x1="34" y1="20" x2="44" y2="40" stroke="#56ab2f" stroke-width="2"/></svg>`
};

const exercicios = [
  {id:'agachamento', nome:'Agachamento', musculo:'pernas', nivel:'iniciante', descricao:'Fique em pé, pés na largura dos ombros. Dobre os joelhos empurrando o quadril para trás como se fosse sentar. Volte à posição inicial.', musculos:'Quadríceps, Glúteos, Posterior de Coxa'},
  {id:'stiff', nome:'Stiff', musculo:'pernas', nivel:'intermediario', descricao:'Segure halteres à frente. Incline o tronco para frente mantendo as costas retas e joelhos levemente flexionados. Retorne.', musculos:'Posterior de Coxa, Glúteos'},
  {id:'agachamento-bulgaro', nome:'Agachamento Búlgaro', musculo:'pernas', nivel:'avancado', descricao:'Apoie um pé em banco atrás de você, outro à frente. Desça o joelho da frente até 90 graus e suba.', musculos:'Quadríceps, Glúteos'},
  {id:'afundo', nome:'Afundo/Passada', musculo:'pernas', nivel:'intermediario', descricao:'Dê um passo à frente e flexione os joelhos até quase tocar o chão. Retorne e troque de perna.', musculos:'Quadríceps, Glúteos, Posterior de Coxa'},
  {id:'elevacao-pelvica', nome:'Elevação Pélvica (Ponte)', musculo:'pernas', nivel:'iniciante', descricao:'Deite de costas, pés no chão, joelhos flexionados. Eleve quadril até formar linha reta do ombro aos joelhos. Retorne.', musculos:'Glúteos, Posterior de Coxa'},
  {id:'flexao-joelho', nome:'Flexão de joelho', musculo:'pernas', nivel:'iniciante', descricao:'Deite de barriga para baixo. Flexione os joelhos levando calcanhares aos glúteos e retorne devagar.', musculos:'Posterior de Coxa'},
  {id:'flexao-braco', nome:'Flexão de Braço', musculo:'peito', nivel:'iniciante', descricao:'Corpo reto, mãos no chão. Flexione os cotovelos até o peito quase tocar o chão. Retorne.', musculos:'Peito, Tríceps, Ombros'},
  {id:'supino', nome:'Supino (halteres ou barra)', musculo:'peito', nivel:'intermediario', descricao:'Deite no banco, segure halteres/barra. Flexione cotovelos levando o peso ao peito e empurre de volta.', musculos:'Peito, Tríceps, Ombros'},
  {id:'desenvolvimento-ombros', nome:'Desenvolvimento de Ombros', musculo:'ombros', nivel:'intermediario', descricao:'Halteres ao lado dos ombros. Empurre para cima até braços estendidos. Retorne.', musculos:'Ombros, Tríceps'},
  {id:'elevacao-lateral', nome:'Elevação Lateral', musculo:'ombros', nivel:'iniciante', descricao:'Halteres ao lado. Levante lateralmente até altura dos ombros e desça lentamente.', musculos:'Ombros'},
  {id:'biceps', nome:'Bíceps (halteres)', musculo:'bracos', nivel:'iniciante', descricao:'Braços ao lado do corpo. Flexione cotovelos levantando halteres e volte.', musculos:'Bíceps'},
  {id:'triceps-halteres', nome:'Tríceps (halteres)', musculo:'bracos', nivel:'iniciante', descricao:'Halteres acima da cabeça, braços estendidos. Flexione cotovelos atrás da cabeça e volte.', musculos:'Tríceps'},
  {id:'triceps-cadeira', nome:'Tríceps na Cadeira', musculo:'bracos', nivel:'iniciante', descricao:'Mãos na borda da cadeira, pés à frente. Flexione cotovelos descendo o corpo. Suba novamente.', musculos:'Tríceps'},
  {id:'remada-curvada', nome:'Remada Curvada (halteres)', musculo:'costas', nivel:'intermediario', descricao:'Segure halteres, tronco inclinado, costas retas. Puxe halteres ao abdômen e desça devagar.', musculos:'Costas, Bíceps'},
  {id:'prancha', nome:'Prancha', musculo:'abdomen', nivel:'iniciante', descricao:'Apoie antebraços e pés, corpo reto. Contraia abdômen, mantenha quadril elevado.', musculos:'Abdômen, Core, Ombros'},
  {id:'prancha-lateral', nome:'Prancha Lateral', musculo:'abdomen', nivel:'intermediario', descricao:'Apoie antebraço e lado do pé. Corpo reto, quadril elevado. Segure.', musculos:'Abdômen lateral, Core, Ombros'},
  {id:'abdominal-supra', nome:'Abdominal Supra', musculo:'abdomen', nivel:'iniciante', descricao:'Deite de costas, joelhos flexionados. Eleve tronco em direção aos joelhos e volte devagar.', musculos:'Abdômen superior'}
];

function criarCard(ex) {
  const card = document.createElement('div');
  card.className = 'treino-card';
  card.setAttribute('data-nivel', ex.nivel);
  card.setAttribute('data-musculo', ex.musculo);
  card.setAttribute('data-exercicio-id', ex.id);

  card.innerHTML = `
    ${svgs[ex.musculo] || svgs['bracos']}
    <h4>${ex.nome}</h4>
    <p>Músculos: ${ex.musculos}</p>
    <p>Como fazer: ${ex.descricao}</p>
    <button class="btn-substituir">Substituir exercício</button>
    <select class="select-substituir"></select>
  `;

  const btn = card.querySelector('.btn-substituir');
  const select = card.querySelector('.select-substituir');
  const opcoes = exercicios.filter(e => e.musculo === ex.musculo && e.nivel === ex.nivel && e.id !== ex.id);

  if(opcoes.length > 0){
    opcoes.forEach(e => {
      const option = document.createElement('option');
      option.value = e.id;
      option.textContent = e.nome;
      select.appendChild(option);
    });
    btn.addEventListener('click', ()=>{ select.style.display = select.style.display==='block'?'none':'block'; });
    select.addEventListener('change', ()=>{
      const eEscolhido = exercicios.find(ev=>ev.id===select.value);
      if(eEscolhido){
        card.setAttribute('data-exercicio-id', eEscolhido.id);
        card.querySelector('h4').textContent = eEscolhido.nome;
        card.querySelector('p:nth-of-type(1)').textContent = 'Músculos: '+eEscolhido.musculos;
        card.querySelector('p:nth-of-type(2)').textContent = 'Como fazer: '+eEscolhido.descricao;
        // Atualizar SVG
        card.querySelector('svg').outerHTML = svgs[eEscolhido.musculo] || svgs['bracos'];
        select.style.display='none';
      }
    });
  } else { btn.style.display='none'; }

  return card;
}

exercicios.forEach(ex=>{
  treinosPorNivel[ex.nivel].appendChild(criarCard(ex));
});
</script>

</body>

};

// SVG simplificado para cada grupo muscular
const svgs = {
  pernas: `<svg viewBox="0 0 64 64"><circle cx="32" cy="10" r="4"/><rect x="30" y="14" width="4" height="20"/><line x1="32" y1="34" x2="20" y2="54" stroke="#56ab2f" stroke-width="4"/><line x1="32" y1="34" x2="44" y2="54" stroke="#56ab2f" stroke-width="4"/></svg>`,
  peito: `<svg viewBox="0 0 64 64"><circle cx="32" cy="10" r="4"/><line x1="32" y1="14" x2="32" y2="50" stroke="#56ab2f" stroke-width="4"/><line x1="32" y1="24" x2="20" y2="40" stroke="#56ab2f" stroke-width="4"/><line x1="32" y1="24" x2="44" y2="40" stroke="#56ab2f" stroke-width="4"/></svg>`,
